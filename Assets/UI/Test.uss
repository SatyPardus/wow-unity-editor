.sidepanel {
    background-color: rgba(219, 57, 57, 0.37);
    width: 250px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    transition-property: left;
    transition-duration: 0.25s;
}

.content {
    width: 100%;
    height: 100%;
    background-color: rgba(55, 86, 204, 0.28);
    margin-left: 250px;
}

.background {
    background-color: rgba(0, 0, 0, 0.52);
    align-items: stretch;
    flex-direction: row;
}

.sidepanel:hover {
    left: -250px;
}
